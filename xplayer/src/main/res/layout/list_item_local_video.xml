<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/img_video_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/txt_video_title"
        style="@style/local_video_text"
        android:layout_alignTop="@id/img_video_icon"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@+id/txt_video_size"
        android:layout_toRightOf="@id/img_video_icon"
        android:maxLines="1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_video_duration"
        style="@style/local_video_text"
        android:layout_alignBottom="@id/img_video_icon"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/img_video_icon"
		 />

    <TextView
        android:id="@+id/txt_video_size"
        style="@style/local_video_text"
        android:layout_alignBottom="@id/img_video_icon"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>